{
  "name": "basketball-tracker",
  "version": "1.0.0",
  "description": "A 3D habit tracker where toggling a day tosses a basketball into a crate",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^23.1.3",
    "cannon-es": "^0.20.0",
    "date-fns": "^3.6.0",
    "three": "^0.170.0",
    "troika-three-text": "^0.52.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/three": "^0.170.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
